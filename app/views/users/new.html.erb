<h1>Sign Up</h1>

<%= form_for @user do |u| %>

	<p>
		<%= u.label :name, "Name" %> <br>
		<%= u.text_field :name %>
	</p>

	<p>
		<%= u.label :email, "Email:" %> <br>
		<%= u.text_field :email %>
	</p>

	<p>
		<%= u.label :password, "Password:" %> <br>
		<%= u.password_field :password %>
	</p>

	<p>
		<%= u.label :password_confirmation, "Confirm Password: " %> <br>
		<%= u.password_field :password_confirmation %>
	</p>

	<p>
		<%= u.submit "Create New User" %>
	</p>

<% end %>
User ID: <%= session[:user_id] %>
