<div class="page_container">
	<h1>QUESTIONS</h1>
	<!-- want to link to filters for questions tags and users -->
	<div class="question_nav_container">
		<div class="questions_nav">Questions</div>
		<div class="questions_nav">Tags</div>
		<div class="questions_nav">User</div>
	</div>
		<div class="mainbar">
			<!-- lists all submitted questions -->
			<ul>
				<!-- shows recently submitted question at the top -->
			<% @questions.reverse_each do |q| %>
				<li class="liststyle">
					<div class="question_stack">
						<div class="vote_wrapper">
								<div class="vote_btn"><%= link_to (image_tag "uparrow.svg", :title => 'Vote Up!'), upvote_path(id: q.id), class: "votearrows" %></div>
							<div class="vote_counter"><%= q.vote_count %></div>
							<div class="vote_btn"><%= link_to (image_tag "downarrow.svg", :title => 'Vote Down..'), downvote_path(id: q.id), class: "votearrows" %></div>
						</div>
					</div>
					<div class="question_stack q_part">
						<%= link_to (q.title), question_path(q.id), class: "q_list" %><br>
						<div class="touch_q"><%= link_to '', edit_question_path(q), class: "edit_delete glyphicon glyphicon-road" %></div>
						<div class="touch_q "><%= link_to '', edit_question_path(q), class: "edit_delete glyphicon glyphicon-edit" %></div>
						<div class="touch_q"><%=  link_to "", { action: "destroy", id: q.id },
						{method: :delete, data: { confirm: "Are you sure?" }, class: "edit_delete glyphicon glyphicon-trash" } %></div>
						<div class="user_img">User</div>
					</div>
				</li>
			<% end %>
			</ul>
			
	</div>
	<!-- data:text/html;base64,PHNjcmlwdD5hbGVydCgnWFNTJyk8L3NjcmlwdD4K -->
	<div class="sidebar">
		ads
	</div>
</div>