<div class="page_container">
	<h1>Post a Question</h1>

	<%= form_for @question do |q| %>

		<%= q.label :title, "Question:" %> <br>
		<p class="question_title"><%= q.text_field :title %></p>
		<br>
		<br>
		<%= q.label :body %> <br>
		<p class="question_body"><%= q.text_area :body %></p>
		<br>
		<br>

		<%= q.submit "SUBMIT" %>

	<% end %>
</div>