<%= form_for @question do |q| %>

	<%= q.label :title, "Question:" %> <br>
	<p class="question_title"><%= q.text_field :title %></p>
	<br>
	<br>
	<%= q.label :body %> <br>
	<p class="question_body"><%= q.text_area :body %></p>
	<br>
	<br>
	<%= q.label :tag_list, "Tags (separate with commas)" %> <br>
	<p class="question_body"><%= q.text_area :tag_list %></p>
	<br>
	<br>
	<%= q.submit "SUBMIT" %>

<% end %>