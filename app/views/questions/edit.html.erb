<div class="page_container">
	<h1>Editing Question</h1>

	<!-- ask jen why this is :question instead of @question --> 
	<%= form_for :question do |f| %>
	  <p>
	    <%= f.label :title %><br>
	    <%= f.text_field :title %>
	  </p>

	  <%= f.label :tag_list, "Tags (separate with commas)" %> <br>
		<p class="question_body"><%= f.text_area :tag_list %></p>
	 
	  <p>
	    <%= f.label :body %><br>
	    <%= f.text_area :body %>
	  </p>
	 
	  <p>
	    <%= f.submit %>
	  </p>
	<% end %>
	 
	<%= link_to 'Back', questions_path %>
</div>