
<!DOCTYPE html>
<html>
<head>
  <title>Pausm</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div id="top_nav">
			<%= image_tag 'pausm_v8.svg', class: "mainlogo" %>
			<div class="category">Questions</div>
			<div class="category">Categories</div>
			<input type="search" id="search_bar" name="search" placeholder="search">
			<div><%= link_to "Sign Up", signup_path, class: "signin" %></div>
			<div><%= link_to "Log in", signin_path, class: "login" %> </div>
		</div>
	</nav>

	<div id="container">
		
		<%= yield %> <!-- grabs templates and other info from elsewhere -->

	</div>

</body>
</html>
